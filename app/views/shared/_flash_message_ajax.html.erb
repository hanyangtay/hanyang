<% flash.each do |message_type, message| %>

    <script type="text/javascript">
        'use strict';
        
        var notification = document.querySelector(".flash-alert-<%= message_type %>");
        var data = {
          message: '<%= message %>',
          timeout: 3000
        };
          notification.MaterialSnackbar.showSnackbar(data);

    </script>
<% end %>




