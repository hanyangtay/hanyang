<% provide(:title, 'Log in') %>

<div class="main-style-1">
<h1>Log in</h1>

<div class="mdl-card__supporting-text">
  <%= form_for(:session, url: login_path) do |f| %>

      <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :email, class: "mdl-textfield__label" %>
      <%= f.email_field :email, class: "mdl-textfield__input" %>
      </div>
      
      <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :password, class: "mdl-textfield__label" %>
      <%= f.password_field :password, class: "mdl-textfield__input" %>
      </div>
      
      <br />
      <br />
      <%= f.label :remember_me, class: "mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" do %>
        <%= f.check_box :remember_me, class: "mdl-checkbox__input" %>
        <span class="form_smalltext"> Remember me
        <%= link_to "Forgot password?", new_password_reset_path, class: "mdl-navigation__link form_smalltext", style: "margin-left:8em;" %> 
      <% end %>
      </span>
      <br /><br />
      <%= f.submit "Log in", class: "mdl-button mdl-js-button 
                                  mdl-button--raised mdl-js-ripple-effect" %>
    <% end %>
    

    <br />
    <br />
    <p class="short">New user? <%= link_to "Sign up now!", signup_path %>
    <br />
    Or use one of these guest accounts: 
    <%= link_to guest_login_path do |f| %>
      <%= image_tag "default/avatar_5.png", class: "guest-account-login" %>
    <% end %>
    <%= link_to guest_login2_path do |f| %>
      <%= image_tag "default/avatar_6.png", class: "guest-account-login" %>
    <% end %>
    <%= link_to guest_login3_path do |f| %>
      <%= image_tag "default/avatar_7.png", class: "guest-account-login" %>
    <% end %>
    </p>
</div>



</div>