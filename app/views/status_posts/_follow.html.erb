<ul class=" mdl-list">
      
      <% @users.each do |user| %>
      
        <li id = "user-<%= user.id %>">
          
          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--2-col small_side_profile">
              <%= link_to user do %>
                <%= image_tag user.avatar.url, class: "profile_pic_small"%>
              <% end %>
            </div>
            
            <div class="mdl-cell mdl-cell--8-col">
              <%= link_to user.name, user, class: "mdl-navigation__link" %>
              
              <br />
              
              <span class="short"><%= user.tagline %> </span>
              <br />
              
            </div>
            
            <div class="mdl-cell mdl-cell--2-col">
                <% unless current_user?(user) %>
                    <% if current_user.following?(user) %>
                    
                        <%= form_for(current_user.active_relationships.find_by(followed_id: user.id),
                            html: { method: :delete }) do |f| %>
                            <%= f.submit "Unfollow", class: "mdl-button mdl-js-button 
                                                  mdl-button--raised mdl-js-ripple-effect" %>
                        <% end %>
                        
                    <% else %>
                    
                        <%= form_for(current_user.active_relationships.build) do |f| %>
                            <div><%= hidden_field_tag :followed_id, user.id %></div>
                            <%= f.submit "Follow", class: "mdl-button mdl-js-button 
                                                          mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
                            <% end %>
            
                    <% end %>
    
                <% end %>
              
            </div>

        </li>
        
      <% end %>
      
</ul>
    
    <%= paginate @users %>