$("#follow-form-<%= @user_reln.id %>").html("<%= escape_javascript(render(partial: 'users/follow', object: @user_reln, as: 'user')) %>");

var currentPage = $("h1").text();

if (currentPage == "<%= @user_reln.name %>") {
    $("#stats-followers").html('<%= @user_reln.followers.count %>');
}

else if (currentPage == "App Home" || "<%= current_user.name %>") {
    $("#stats-following").html('<%= current_user.following.count %>');
}


