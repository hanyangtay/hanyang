<% provide(:title, 'Reset password') %>
<div class="main-style-1">
<h1>Reset password</h1>

<div class="mdl-card__supporting-text" style: "padding-top: 0.5em;">
  <%= form_for(:password_reset, url: password_resets_path) do |f| %>
  
      <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :email, class: "mdl-textfield__label" %>
      <%= f.email_field :email, class: "mdl-textfield__input" %>
      </div>
      <br />
      <br />
      <%= f.submit "Reset password", class: "mdl-button mdl-js-button 
                                  mdl-button--raised mdl-js-ripple-effect" %>
    <% end %>
</div>


</div>
