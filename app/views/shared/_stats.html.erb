<% @user ||= current_user %>

<%= link_to @user do %>
      <%= image_tag @user.avatar.url, class: "profile_pic"%>
<% end %>
    
    <br />
    <br />
    
    <%= @user.tagline %>
    
    <br />
    <br />
    <%= link_to user_path(@user) do %>
    <strong id="stats-posts"> <%= @user.status_posts.count %> </strong> posts
    <% end %>
    
    <br />
    
    <%= link_to user_path(@user, anchor: "following-panel") do %>
    <strong id="stats-following"> <%= @user.following.count %> </strong> following,
    <% end %>
    
    <%= link_to user_path(@user, anchor: "followers-panel") do %>
    <strong id="stats-followers"> <%= @user.followers.count %> </strong> followers
    <% end %>
    
    <br />
    <br />
    <% unless current_user?(@user) %>
                    <span id="follow-form-<%= @user.id %>">
                    <% if current_user.following?(@user) %>
                    
                        <%= render partial: "users/unfollow", object: @user, as: 'user' %>
                        
                    <% else %>
                    
                        <%= render partial: "users/follow", object: @user, as: 'user' %>
            
                    <% end %>
                    </span>
    
                <% end %>
