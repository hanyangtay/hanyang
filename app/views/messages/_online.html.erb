<div class="center-text"><i class="material-icons">textsms</i></div>

<% if @users.any? %>

  <ul class= "mdl-list" style="margin-top: 0; padding-top: 0;">
      
    <% @users.each do |user| %>
      
      <li id = "user-<%= user.id %>">

        <div class="mdl-grid">
          <div class="mdl-cell mdl-cell--4-col chat-online-profile">
            <%= link_to user do %>
              <%= image_tag user.avatar.url, class: "profile_pic_small"%>
            <% end %>
          </div>
            
          <div class="mdl-cell mdl-cell--8-col" style="padding-top: 13px;">
            <%= link_to user.name, user, class: "mdl-navigation__link" %>
          </div>
            
        </div>
    </li>
    
    <% end %>
<% end %>        