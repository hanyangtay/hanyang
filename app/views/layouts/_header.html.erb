<header class="main-header mdl-layout__header mdl-layout__header--waterfall">
    <div class="mdl-layout__header-row">
        <!-- Title -->    
        <title><%= yield(:title) %></title>
        <%= link_to root_path, class: "mdl-layout-title" do %>
            <span style="color: #757575">twitter.</span>live
        <% end %>
        
        <!-- Add spacer, to align navigation to the right in desktop -->
        <div class="mdl-layout-spacer"></div>
          
        <!-- Navigation -->
        <div class="main-navigation-container">
            <nav class="main-header mdl-navigation">
                <% if logged_in? %>
                    <%= link_to "Wall Feed", status_posts_path, class: "main-header mdl-navigation__link" %>
                    <%= link_to "Profile", current_user, class: "main-header mdl-navigation__link" %>
                    <%= link_to "Settings", edit_user_path(current_user), class: "main-header mdl-navigation__link" %>
                    <%= link_to "Log out", logout_path, method: :delete, class: "main-header mdl-navigation__link" %>
                            
                    <% else %>
                    <%= link_to "Log in", login_path, class: "main-header mdl-navigation__link" %>
                    <%= link_to "Sign up", signup_path, class: "main-header mdl-navigation__link" %>
                    <%= link_to "Explore", explore_path, class: "main-header mdl-navigation__link" %>

                    <% end %>
            </nav>
        </div>
    </div>
    
        
</header>